<!DOCTYPE html>

<title>Note</title>

{% block body %}
    <h1>Note</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ note.text }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ note.createdAt ? note.createdAt|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ note.updatedAt ? note.updatedAt|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>IsDeleted</th>
                <td>{{ note.isDeleted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_note_index') }}">back to list</a>

    <a href="{{ path('app_note_edit', {'id': note.id}) }}">edit</a>

    {{ include('note/_delete_form.html.twig') }}
{% endblock %}
